{
  "manifest_version": 2,
  "name": "Cuckoo Alarm",
  "version": "1.0.4",
  "description": "the Alarm with a cuckoo sings every 30 minutes",
  "author": "matsuoshi",
  "homepage_url": "https://github.com/matsuoshi/cuckoo_alarm",
  "permissions": ["alarms"],
  "background": {
    "scripts": ["cuckoo_alarm.js"]
  },
  "browser_action":{
    "default_icon": {
      "128": "icons/icon128.png"
    },
    "default_title": "toggle the cuckoo sings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "128": "icons/icon128.png"
  }
}
