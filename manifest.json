{
  "name": "cuckoo alarm",
  "version": "1.0.0",
  "description": "the Alarm with a cuckoo sounding every 30 minutes",
  "manifest_version": 2,
  "permissions": ["alarms"],
  "background": {
    "scripts": ["cuckoo_alarm.js"]
  },
  "browser_action":{
    "default_icon": {
      "128": "icons/icon128.png"
    },
    "default_title": "toggle cuckoo sound"
  },
  "icons": {
    "16": "icons/icon16.png",
    "128": "icons/icon128.png"
  }
}
